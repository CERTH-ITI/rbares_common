<?xml version="1.0"?>
<launch>

  <arg name="robot_id" default="$(optenv ROBOT_ID)"/>
  <arg name="prefix" default="$(arg robot_id)_"/>

  <arg name="front_scan_topic" default="$(optenv ROBOT_NAVIGATION_FRONT_2D_SCAN front_laser/scan_filtered)"/>
  <arg name="scan_topic" default="$(arg front_scan_topic)"/>
  <arg name="map_topic" default="map"/>
  <arg name="global_frame" default="$(arg prefix)map"/> 
  <arg name="odom_frame" default="$(arg prefix)odom"/> 
  <arg name="base_frame" default="$(arg prefix)base_footprint"/>
  
  <!-- These are from amcl -->
  <arg name="input_pose_topic" default="amcl_pose" /> 
  <arg name="output_pose_topic" default="correctpose" />
 
  <arg name="localization_package" default="$(optenv LOCALIZATION_PACKAGE rbares_localization)"/>
  <arg name="config_folder" default="$(eval find(localization_package) + '/config')" />
  <arg name="icp_config_file" default="$(eval config_folder + '/icp_pose_corrector.yaml')"/>

  <node pkg="icp_pose_corrector" type="icp_pose_corrector_node" name="icp_pose_corrector" output="screen">
    <rosparam file="$(arg icp_config_file)" command="load" subst_value="true"/>
  </node>

</launch>